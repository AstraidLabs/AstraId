{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "InternalTokens": {
    "Issuer": "astraid-api",
    "Audience": "astraid-app",
    "SigningKey": "<set-in-environment-or-user-secrets>",
    "Algorithm": "HS256"
  },
  "AuthServer": {
    "Issuer": "https://localhost:7001/"
  },
  "Redis": {
    "ConnectionString": "localhost:6379,abortConnect=false"
  },
  "Hangfire": {
    "StorageConnectionString": "<set-in-environment-or-user-secrets>"
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "GameDatabase": "Host=localhost;Port=5432;Database=astraid_game;Username=postgres;Password=postgres"
  },
  "Game": {
    "TickCapMinutes": 240,
    "ShieldHoursOnGraduation": 48
  }
}