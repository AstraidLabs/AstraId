{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "InternalTokens": {
    "Issuer": "astraid-api",
    "Audience": "astraid-app",
    "AllowedServices": [
      "api"
    ],
    "AllowedAlgorithms": [
      "RS256"
    ],
    "JwksUrl": "https://localhost:7002/internal/.well-known/jwks.json",
    "JwksRefreshMinutes": 5,
    "JwksInternalApiKey": "__REPLACE_ME__",
    "AllowLegacyHs256": false,
    "LegacyHs256Secret": "__REPLACE_ME__",
    "BreakGlassOverride": false,
    "LegacyHs256MinSecretLength": 32
  },
  "AuthServer": {
    "Issuer": "https://localhost:7001/"
  },
  "Redis": {
    "ConnectionString": "localhost:6379,abortConnect=false"
  },
  "Hangfire": {
    "StorageConnectionString": "<set-in-environment-or-user-secrets>"
  },
  "AllowedHosts": "*",
  "AppServer": {
    "Mtls": {
      "Enabled": false,
      "RequireClientCertificate": false,
      "AllowedClientThumbprints": [
        "__REPLACE_ME__"
      ],
      "AllowedClientSubjectNames": [
        "CN=__REPLACE_ME__"
      ]
    }
  },
  "SecurityHardening": {
    "Enabled": true,
    "Headers": {
      "Enabled": true
    }
  },
  "AstraLogging": {
    "Mode": "Production",
    "RedactionEnabled": true,
    "Application": {
      "Enabled": true,
      "MinimumLevel": "Information"
    },
    "DeveloperDiagnostics": {
      "Enabled": false,
      "MinimumLevel": "Debug"
    },
    "SecurityAudit": {
      "Enabled": true,
      "MinimumLevel": "Information"
    },
    "RequestLogging": {
      "Enabled": true,
      "IncludeQueryString": false,
      "IncludeBody": false,
      "MaxBodyLength": 2048,
      "SafeBodyPathAllowList": [
        "/health"
      ],
      "BodyPathBlockListPrefixes": [
        "/connect/",
        "/auth/",
        "/admin/",
        "/account/",
        "/hubs/"
      ]
    }
  }
}
