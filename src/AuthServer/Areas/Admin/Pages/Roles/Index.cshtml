@page
@model AuthServer.Areas.Admin.Pages.Roles.IndexModel

<h1>Roles</h1>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-info">@Model.StatusMessage</div>
}

<form method="post" asp-page-handler="Create" class="row g-2 mb-3">
    <div class="col-auto">
        <input class="form-control" asp-for="NewRoleName" placeholder="Role name" />
    </div>
    <div class="col-auto">
        <button class="btn btn-primary" type="submit">Create</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>System</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var role in Model.Roles)
    {
        <tr>
            <td>@role.Name</td>
            <td>@role.IsSystem</td>
            <td>
                <a class="btn btn-sm btn-outline-secondary" asp-page="Edit" asp-route-id="@role.Id">Edit</a>
                @if (!role.IsSystem)
                {
                    <form method="post" asp-page-handler="Delete" asp-route-id="@role.Id" class="d-inline">
                        <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
