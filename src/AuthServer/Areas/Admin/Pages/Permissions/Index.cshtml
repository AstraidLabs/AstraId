@page
@model AuthServer.Areas.Admin.Pages.Permissions.IndexModel

<h1>Permissions</h1>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-info">@Model.StatusMessage</div>
}

<a class="btn btn-primary mb-3" asp-page="Create">Create</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Key</th>
            <th>Description</th>
            <th>Group</th>
            <th>System</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var permission in Model.Permissions)
    {
        <tr>
            <td>@permission.Key</td>
            <td>@permission.Description</td>
            <td>@permission.Group</td>
            <td>@permission.IsSystem</td>
            <td>
                <a class="btn btn-sm btn-outline-secondary" asp-page="Edit" asp-route-id="@permission.Id">Edit</a>
                <form method="post" asp-page-handler="Delete" asp-route-id="@permission.Id" class="d-inline">
                    <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
