@page "{id:guid}"
@model AuthServer.Areas.Admin.Pages.Users.EditModel

<h1>Edit User</h1>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-info">@Model.StatusMessage</div>
}

<form method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" value="@Model.Email" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Username</label>
        <input class="form-control" value="@Model.UserName" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Roles</label>
        <div class="form-check">
            @foreach (var role in Model.AvailableRoles)
            {
                <div>
                    <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role.Name" @(Model.SelectedRoles.Contains(role.Name) ? "checked" : string.Empty) />
                    <label class="form-check-label">@role.Name</label>
                </div>
            }
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Locked</label>
        <input type="checkbox" class="form-check-input" asp-for="IsLockedOut" />
    </div>

    <div class="mb-3">
        <label class="form-label">Reset password</label>
        <input class="form-control" asp-for="NewPassword" type="password" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-page="Index">Back</a>
</form>
