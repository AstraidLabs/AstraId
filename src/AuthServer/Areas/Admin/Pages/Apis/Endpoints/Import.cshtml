@page "{apiId:guid}"
@model AuthServer.Areas.Admin.Pages.Apis.Endpoints.ImportModel

<h1>Import Endpoints</h1>

<p>Paste JSON payload for API sync (array of endpoints).</p>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-info">@Model.StatusMessage</div>
}

<form method="post">
    <input type="hidden" asp-for="ApiId" />
    <div class="mb-3">
        <label class="form-label">Payload</label>
        <textarea class="form-control" asp-for="Payload" rows="10"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Import</button>
    <a class="btn btn-secondary" asp-page="Index" asp-route-apiId="@Model.ApiId">Back</a>
</form>
