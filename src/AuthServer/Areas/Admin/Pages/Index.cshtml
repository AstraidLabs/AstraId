@page
@model AuthServer.Areas.Admin.Pages.IndexModel

<h1>Admin Dashboard</h1>

<div class="row">
    <div class="col-md-3">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Users</h5>
                <p class="card-text">@Model.UserCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Roles</h5>
                <p class="card-text">@Model.RoleCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Permissions</h5>
                <p class="card-text">@Model.PermissionCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">API Endpoints</h5>
                <p class="card-text">@Model.EndpointCount</p>
            </div>
        </div>
    </div>
</div>
